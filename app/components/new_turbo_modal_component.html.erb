<%= turbo_frame_tag "modal" do %>
  <%= tag.div data: { controller: "turbo-modal",
                      turbo_modal_target: "modal",
                      action: "turbo:submit-end->turbo-modal#submitEnd keyup@window->turbo-modal#closeWithKeyboard click@window->turbo-modal#closeBackground" },
              class: "modal fade show new-modal", tabindex: '-1', style: "display: block" do %>
    <div class="modal-dialog modal-xl modal-fullscreen-lg-down modal-dialog-centered modal-dialog-scrollable">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5 text-truncate" id="ModalLabel"><%= @header %></h1>
          <%= button_tag '', data: { action: "turbo-modal#hideModal" }, class: "btn-close", type: 'button', 'aria-label': "Close" %>
        </div>
        <div class="modal-body d-flex">
          <%= content %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-action="turbo-modal#hideModal"><%= I18n.t('modal.close') %></button>
          <button type="submit" class="btn btn-primary" form="new-form"><%= I18n.t('modal.confirm') %></button>
        </div>
      </div>
    </div>
  <% end %>
  <%#= javascript_tag "form_validate();" %>
<% end %>

