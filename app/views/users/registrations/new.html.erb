<div class="d-flex justify-content-center align-items-center mt-3">
  <div class="d-flex justify-content-center flex-column auth-block">
    <h2 class="text-center"><%= I18n.t('devise.links.sign_up') %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name, locale: I18n.locale), html: { 'data-turbo': 'false' }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :name, I18n.t('devise.links.name') %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :email, I18n.t('devise.links.email') %><br />
        <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password, I18n.t('devise.links.password') %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, I18n.t('devise.links.password_confirmation') %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="actions d-grid mt-3">
        <%= f.submit I18n.t('devise.links.sign_up'), class: "btn btn-primary mb-2 mt-2" %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>