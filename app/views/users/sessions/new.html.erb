<div class="d-flex justify-content-center align-items-center mt-3">
  <div class="d-flex justify-content-center flex-column auth-block">
    <h2 class="text-center"><%= I18n.t('devise.links.login') %></h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :email, I18n.t('devise.links.email') %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password, I18n.t('devise.links.password') %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group my-3">
          <div class="field form-check">
            <%= f.check_box :remember_me, class: "form-check-input", id: "defaultCheck1" %>
            <%= f.label :remember_me, I18n.t('devise.links.remember_me'), class: "form-check-label", for: "defaultCheck1" %>
          </div>
        </div>
      <% end %>

      <div class="actions d-grid">
        <%= f.submit I18n.t('devise.links.login'), class: "btn btn-primary mb-2" %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>