<div class="actions d-grid">
  <%- if controller_name != 'sessions' %>
    <%= link_to I18n.t('devise.links.login'), new_session_path(resource_name), class: "btn btn-outline-primary mb-2" %>
  <% end %>

  <%#= f.submit "Sign up", class: "btn btn-outline-primary mb-2" %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to I18n.t('devise.links.sign_up'), new_registration_path(resource_name), class: "btn btn-outline-primary mb-2" %>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to I18n.t('devise.links.forgot_password'), new_password_path(resource_name) %><br />
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to I18n.t('devise.links.didnt_recieve_confirmation_instructions'), new_confirmation_path(resource_name) %><br />
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to I18n.t('devise.links.didnt_recieve_unlock_instructions'), new_unlock_path(resource_name) %><br />
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= link_to I18n.t('devise.links.sign_in_with', provider: OmniAuth::Utils.camelize(provider)), omniauth_authorize_path(resource_name, provider), method: :post %><br />
    <% end %>
  <% end %>
</div>