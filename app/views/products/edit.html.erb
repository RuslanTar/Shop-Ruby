<div class="container">
  <%= render 'shared/error_messages', resource: @product %>
  <%= form_for @product do |f| %>
    <div class="form-group">
      <%= f.label :name, "Title", class: "" %>
      <%= f.text_field :name, class: "form-control w-50" %>
    </div>

    <div class="form-group mt-3 w-50">
      <%= f.label :description, "Description", class: "" %>
      <%= f.text_area :description, class: "form-control" %>
    </div>

    <div class="form-group mt-3 w-50">
      <%= f.label :images, "Images", class: "" %>
      <%= f.file_field :images, class: "form-control", multiple: true %>
    </div>

    <%= f.submit 'Save', { class: 'mt-3' } %>
  <% end %>
</div>
