<div class="filter-price">
  <header>
    <h2>Price Range</h2>
    <p>Use slider or enter min and max price</p>
  </header>
  <% min_price = Product.pluck(:price).min %>
  <% max_price = Product.pluck(:price).max %>
  <div class="price-input mb-1">
    <%= f.number_field :price, in: 0..max_price, step: 1 %>
    <input type="number" class="input-min" value="0">
    <input type="number" class="input-max" value="<%= max_price %>">
  </div>
  <div class="slider">
    <div class="progress"></div>
  </div>
  <div class="range-input">
    <input type="range" class="range-min" min="<%= min_price %>" max="<%= max_price %>" value="0">
    <input type="range" class="range-max" min="<%= min_price %>" max="<%= max_price %>" value="<%= max_price %>">
  </div>
</div>